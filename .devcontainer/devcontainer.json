{
    "name": "kaggle-",
    "image": "gcr.io/kaggle-gpu-images/python:latest",
    "containerEnv": {
      "TZ": "Asia/Tokyo"
    },
    "runArgs": ["--init"],
    "postCreateCommand": "./.devcontainer/postCreateCommand.sh",
    "workspaceFolder": "/kaggle/input",
    "workspaceMount": "source=${localWorkspaceFolder},target=/kaggle/input,type=bind,consistency=cached",
    "mounts": [
      "source=${localEnv:USERPROFILE}/.kaggle,target=/root/.kaggle,type=bind,consistency=cached",
      "source=${localEnv:USERPROFILE}/Desktop/dev/mymodules,target=/kaggle/input/mymodules,type=bind,consistency=cached",
      "source=venv-${devcontainerId},target=${containerWorkspaceFolder}/.venv,type=volume"
    ],
    "customizations": {
      "vscode": {
        "settings": {
          "editor.renderWhitespace": "all",
        //   "python.defaultInterpreterPath": ".venv/bin/python",
          "python.formatting.provider": "black",
          "[python]": {
            "editor.formatOnSave": true,
            "editor.codeActionsOnSave": {
              "source.fixAll": true,
              "source.organizeImports": true
            }
          },
          "python.testing.pytestArgs": ["tests", "--capture=tee-sys", "-vv"],
          "python.testing.pytestEnabled": true,
          "coverage-gutters.showLineCoverage": true,
          "coverage-gutters.showRulerCoverage": true,
          "coverage-gutters.coverageFileNames": [".pytest_cache/coverage.xml"],
          "[json][jsonc]": {
            "editor.defaultFormatter": "esbenp.prettier-vscode",
            "editor.formatOnSave": true,
            "editor.codeActionsOnSave": {
              "source.fixAll": true
            }
          }
        },
        "extensions": [
          "esbenp.prettier-vscode",
          "ms-python.python",
          "ms-toolsai.jupyter",
          "github.copilot",
          "njpwerner.autodocstring",
          "KevinRose.vsc-python-indent",
          "charliermarsh.ruff",
          "ryanluker.vscode-coverage-gutters"
        ]
      }
    }
  }
  